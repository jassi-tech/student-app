{
  "cli": {
    "version": ">= 2.0.0",
    "appVersionSource": "local"
  },
  "build": {
    "production": {
      "android": {
        "buildType": "app-bundle"
      },
      "ios": {
        "distribution": "store"
      }
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      },
      "ios": {
        "distribution": "internal",
        "simulator": false
      }
    },
    "simulator": {
      "distribution": "internal",
      "ios": { "simulator": true }
    }
  }
}
